{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2021",
    "sourceMap": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "paths": {
      "@monorepo/*": [
        "packages/*/src/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "apps/server"
    },
    {
      "path": "apps/react-client"
    }
  ],
  "exclude": ["node_modules", "dist", "*.d.ts"]
}
